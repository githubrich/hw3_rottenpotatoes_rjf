-# in app/views/movies/show.html.haml

%h2 Details about #{@movie.title}

%ul#details
  %li
    Director:
    = @movie.director
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @movie.description

= link_to 'Edit', edit_movie_path(@movie)
= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
-if (@movie.director == nil) or (@movie.director == "") or (@movie.director == " ")
  = link_to 'Find Movies With Same Director', movies_path
-else
  = link_to 'Find Movies With Same Director', movie_directed_by_path(@movie.director)
<br />
= link_to 'Back to movie list', movies_path
